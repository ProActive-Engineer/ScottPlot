<Window x:Class="ScottPlot.Demo.WPF.CookbookGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlot.Demo.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="WhiteSmoke"
        Title="ScottPlot Cookbook Generator" Height="400" Width="500">
    <DockPanel Margin="5">
        <DockPanel DockPanel.Dock="Top">
            <Button x:Name="GenerateButton" Content="Generate" Padding="5,3,5,3" DockPanel.Dock="Left" Click="GenerateClicked"/>
            <Button x:Name="OpenFolderButton" Content="Open Folder" Padding="5,3,5,3" DockPanel.Dock="Right" Click="OpenClicked" IsEnabled="False"/>
            <ProgressBar x:Name="ProgressBar1" Margin="5,0,5,0" Value="23"/>
        </DockPanel>
        <TextBox x:Name="messageTextBox" Margin="5" Text="waiting to generate..." FontFamily="consolas" BorderThickness="0" Background="Transparent" IsReadOnly="True"/>
    </DockPanel>
</Window>
